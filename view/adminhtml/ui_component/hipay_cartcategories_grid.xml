<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid_data_source</item>
            <item name="deps" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">hipay_cartcategories_grid_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Create New Mapping Categories</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">hipay/cartcategories/new</item>
            </item>
        </item>
    </argument>
    <dataSource name="hipay_cartcategories_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">mapping_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>

        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="hipay_cartcategories_grid_data_source">
            <settings>
                <requestFieldName>mapping_id</requestFieldName>
                <primaryFieldName>mapping_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <container name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
            </item>
        </argument>
        <bookmark name="bookmarks">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="namespace" xsi:type="string">hipay_cartcategories_grid</item>
                    </item>
                </item>
            </argument>
        </bookmark>
        <component name="columns_controls">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsData" xsi:type="array">
                        <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.hipay_cartcategories_grid_columns</item>
                    </item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/controls/columns</item>
                    <item name="displayArea" xsi:type="string">dataGridActions</item>
                </item>
            </argument>
        </component>
        <exportButton name="export_button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.hipay_cartcategories_grid_columns.ids</item>
                </item>
            </argument>
        </exportButton>
        <filterSearch name="fulltext">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid_data_source</item>
                    <item name="chipsProvider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.listing_top.listing_filters_chips</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.search</item>
                    </item>
                </item>
            </argument>
        </filterSearch>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsProvider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.hipay_cartcategories_grid_columns</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.filters</item>
                    </item>
                    <item name="childDefaults" xsi:type="array">
                        <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.listing_top.listing_filters</item>
                        <item name="imports" xsi:type="array">
                            <item name="visible" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.hipay_cartcategories_grid_columns.${ $.index }:visible</item>
                        </item>
                    </item>
                </item>
            </argument>
        </filters>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.paging</item>
                    </item>
                    <item name="selectProvider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.hipay_cartcategories_grid_columns.ids</item>
                </item>
            </argument>
        </paging>
    </container>
    <columns name="hipay_cartcategories_grid_columns">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="storageConfig" xsi:type="array">
                    <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.listing_top.bookmarks</item>
                    <item name="namespace" xsi:type="string">current</item>
                </item>
                <item name="childDefaults" xsi:type="array">
                    <item name="fieldAction" xsi:type="array">
                        <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.hipay_cartcategories_grid_columns.actions</item>
                        <item name="target" xsi:type="string">applyAction</item>
                        <item name="params" xsi:type="array">
                            <item name="0" xsi:type="string">view</item>
                            <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                        </item>
                    </item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">hipay_cartcategories_grid.hipay_cartcategories_grid.listing_top.bookmarks</item>
                        <item name="root" xsi:type="string">columns.${ $.index }</item>
                        <item name="namespace" xsi:type="string">current.${ $.storageConfig.root}</item>
                    </item>
                </item>
            </item>
        </argument>
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">mapping_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="category_magento_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">HiPay\FullserviceMagento\Model\System\Config\Source\CategoriesMagento</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Category Magento</item>
                </item>
            </argument>
        </column>
        <column name="category_hipay_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">HiPay\FullserviceMagento\Model\System\Config\Source\CategoriesHipay</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Category Hipay</item>
                </item>
            </argument>
        </column>
        <actionsColumn name="actions" class="HiPay\FullserviceMagento\Ui\Component\Listing\Column\CartCategoriesActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">mapping_id</item>
                    <item name="viewUrlPath" xsi:type="string">hipay/CartCategories/edit</item>
                    <item name="urlEntityParamName" xsi:type="string">mapping_id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
