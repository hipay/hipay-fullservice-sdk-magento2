<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="controller_action_predispatch_hipay">
        <observer name="check_signature" instance="HiPay\FullserviceMagento\Observer\CheckHttpSignatureObserver"/>
    </event>
    <event name="controller_action_predispatch_checkout_index_index">
        <observer name="reload_cart" instance="HiPay\FullserviceMagento\Observer\RestoreBasketObserver"/>
    </event>
</config>
