<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="hipay_paypalapiv2" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>HiPay Enterprise Paypal V2</label>
        <comment></comment>
        <!--
            Include tag import configuration from another file.
            base_top.xml contain configuration fields will be appear on top
            like enabled, title, order statues etc ...
        -->
        <include path="HiPay_FullserviceMagento::system/method/base_top.xml"/>


        <field id="payment_action" translate="label comment" type="select" sortOrder="29" showInDefault="1" showInWebsite="1">
            <label>Capture</label>
            <source_model>HiPay\FullserviceMagento\Model\System\Config\Source\PaymentActions</source_model>
            <tooltip><![CDATA[<b>Manual</b>: All transactions will be captured manually either from the Hipay Back office or from your Magento administration dashboard. </br><b>Automatic</b>: All transactions will be captured automatically.]]></tooltip>
        </field>
        <include path="HiPay_FullserviceMagento::system/method/base_country.xml"/>
        <field id="merchant_id" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Merchant PayPal ID</label>
            <comment><![CDATA[<b>Important! :</b> Please provide your Merchant PayPal ID to enable PayPal V2 integration.]]></comment>
        </field>
        <field id="button_layout" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Layout</label>
            <source_model>HiPay\FullserviceMagento\Model\System\Config\Source\PaypalV2\Layout</source_model>
        </field>
        <field id="button_colour" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Button Colour</label>
            <source_model>HiPay\FullserviceMagento\Model\System\Config\Source\PaypalV2\ButtonColor</source_model>
        </field>
        <field id="button_shape" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Button Shape</label>
            <source_model>HiPay\FullserviceMagento\Model\System\Config\Source\PaypalV2\ButtonShape</source_model>
        </field>
        <field id="button_label" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Button Label</label>
            <source_model>HiPay\FullserviceMagento\Model\System\Config\Source\PaypalV2\ButtonLabel</source_model>
        </field>
        <field id="button_height" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Button Height</label>
            <validate>validate-number validate-number-range number-range-25-55</validate>
            <comment>Enter a value between 25 and 55. Default is 40.</comment>
        </field>
        <field id="show_pay_later" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Show 'Buy Now / Pay Later' Button</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <!--
            Include tag import configuration from another file.
            base_bottom.xml contain configuration fields will be appear on bottom
            like test mode, debug, sort order etc ..
        -->
        <include path="HiPay_FullserviceMagento::system/method/base_bottom.xml"/>

    </group>
</include>
