<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <field id="cancel_pending_order" translate="label comment" type="select" sortOrder="49" showInDefault="1" showInWebsite="1" showInStore="0">
        <label>Cancel pending order</label>
        <comment>Automatically cancel orders that remain pending for more than the configured duration.</comment>
        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
    </field>

    <field id="cancellation_deadline" translate="label comment" type="text" sortOrder="49.5" showInDefault="1" showInWebsite="1" showInStore="0">
        <backend_model>HiPay\FullserviceMagento\Model\Config\Backend\CancellationDelay</backend_model>
        <validate>validate-digits</validate>
        <label>Cancellation delay</label>
        <comment>In minutes. Minimum: 30. Maximum: 10080 (7 days).</comment>
        <depends>
            <field id="cancel_pending_order">1</field>
        </depends>
    </field>
</include>
